<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F8F6F5"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_interface.ProfileDataScheduleAdd">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Toolbar

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imv_carepay_active_transfer_tobank_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_23">

                    </ImageView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:text="Transfer"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">





                </LinearLayout>

            </LinearLayout>








        </Toolbar>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="5dp"
                    android:text="Your account"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:weightSum="5"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="#F8F6F5"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/txt_carepay_active_transfer_tobank_inf"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/txt_carepay_active_transfer_tobank_money"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>




            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="5dp"
                    android:text="Choose a bank"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


            <Spinner
                android:padding="10dp"
                android:id="@+id/spl_carepay_active_transfer_tobank_bank"
                android:background="#FFFFFF"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </Spinner>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="5dp"
                    android:text="Account number"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


            <EditText
                android:inputType="number"
                android:padding="10dp"
                android:id="@+id/edt_carepay_active_transfer_tobank_phone"
                android:background="#FFFFFF"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </EditText>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="5dp"
                    android:text="Recipient"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/imv_carepay_active_transfer_tobank_img"
                    android:src="@drawable/user"
                    android:layout_width="200dp"
                    android:layout_height="200dp">

                </ImageView>

            </LinearLayout>


            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="5dp"
                    android:text="Recipient's name"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:weightSum="5"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="#F8F6F5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_carepay_active_transfer_tobank_name"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="5dp"
                    android:text="Amount of money"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


            <EditText
                android:inputType="number"
                android:drawableRight="@drawable/usd"
                android:padding="10dp"
                android:id="@+id/edt_carepay_active_transfer_tobank_am"
                android:background="#FFFFFF"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </EditText>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="5dp"
                    android:text="Sransfer content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:weightSum="5"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="#F8F6F5"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <EditText
                    android:padding="10dp"
                    android:text="Nguyen Ngoc Thang tranfer"
                    android:id="@+id/edt_carepay_active_transfer_tobank_sran"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                </EditText>





            </LinearLayout>

            <Button
                android:id="@+id/btn_carepay_active_transfer_tobank_next"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#2BC4BF"
                android:text="Continue"
                android:textAllCaps="false" />

            <LinearLayout
                android:gravity="center"
                android:weightSum="5"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="#F8F6F5"
                android:layout_width="match_parent"
                android:layout_height="50dp">






            </LinearLayout>







        </LinearLayout>
    </ScrollView>


</LinearLayout>