<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F5"
    tools:context=".profile_interface.ProfileDataScheduleAdd">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imv_home_home1_checkAll_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_23">

                    </ImageView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:text="Confirmation and payment"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">



                </LinearLayout>

            </LinearLayout>




        </Toolbar>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/homeonext"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                </ImageView>
                <TextView
                    android:layout_marginStart="15dp"
                    android:text="Patient Information"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/carepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Name"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_home_home1_checkAll_name"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="Nguyen Ngoc Thang"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Gender"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAll_gender"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="Male"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Age"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAll_age"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="22 years old"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Phone"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAll_phone"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0972809182"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left|top"

                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Address"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right|top"

                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAll_address"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="130/75 Hoang hoa tham, Ha noi, Viet Nam"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/homeonext2"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Examination schedule"
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>



            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/carepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Service"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAll_hospital"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="Test At Home"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Day of the examination"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAll_date"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="10/10/2000"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left|top"

                        android:layout_weight="1.4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Estimated examination time"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right|top"

                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAll_time"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="17:30"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="1.1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Type of examination"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="0.9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAll_service"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="Service"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Payment type"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="Just make appointment"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

            <Button
                android:id="@+id/btn_home_home1_checkAll_next"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#2BC4BF"
                android:text="Book an appointment"
                android:textAllCaps="false" />


        </LinearLayout>



    </ScrollView>



</LinearLayout>