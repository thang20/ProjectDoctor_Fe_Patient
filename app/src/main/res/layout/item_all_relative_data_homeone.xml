<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:backgroundTint="#EBEBEC"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/carepay"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txt_home_home1_data_allRelative_name"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Nguyen Ngoc Thang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:gravity="center|left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView

                android:layout_marginStart="15dp"
                android:textSize="17dp"
                android:text="Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center|right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_home_home1_data_allRelative_gender"
                android:layout_marginEnd="15dp"
                android:textSize="17dp"
                android:text="Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:background="#C6C6C6"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:gravity="center|left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginStart="15dp"
                android:textSize="17dp"
                android:text="Relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center|right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_home_home1_data_allRelative_relative"
                android:layout_marginEnd="15dp"
                android:textSize="17dp"
                android:text="Dad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:background="#C6C6C6"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:gravity="center|left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginStart="15dp"
                android:textSize="17dp"
                android:text="Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center|right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_home_home1_data_allRelative_age"
                android:layout_marginEnd="15dp"
                android:textSize="17dp"
                android:text="44 years old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:background="#C6C6C6"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:gravity="center|left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Phone"
                android:textSize="17dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center|right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_home_home1_data_allRelative_phone"
                android:layout_marginEnd="15dp"
                android:textSize="17dp"
                android:text="0979040836"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:background="#C6C6C6"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:gravity="center|left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginStart="15dp"
                android:textSize="17dp"
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center|right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_home_home1_data_allRelative_address"
                android:layout_marginEnd="15dp"
                android:textSize="17dp"
                android:text="Tan Dan Kinh Mon Hai Duong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:background="#C6C6C6"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_home_home1_data_allRelative_book"
        android:layout_marginHorizontal="15dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:backgroundTint="#2BC4BF"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </Button>









</LinearLayout>