<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center|top"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rcv_item_new_item_comment_imageFace"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FAF9F9"/>

        </LinearLayout>
        <LinearLayout
            android:backgroundTint="#F8F6F5"
            android:background="@drawable/edittext"
            android:layout_marginStart="5dp"
            android:gravity="center|left"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:id="@+id/txt_item_new_item_comment_fullName"
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:id="@+id/txt_item_new_item_comment_content"
                android:layout_marginStart="5dp"
                android:textSize="17sp"
                android:textColor="#000000"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>





        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_marginStart="55dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center|left|top"
        android:background="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/send"
            android:id="@+id/imv_item_new_item_comment_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="0dp">

        </ImageView>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt__item_new_item_comment_time"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginStart="10dp"
                android:padding="5dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txt__item_new_item_comment_date"
                android:textColor="#000000"
                android:textSize="15dp"

                android:padding="5dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>



    </LinearLayout>





</LinearLayout>