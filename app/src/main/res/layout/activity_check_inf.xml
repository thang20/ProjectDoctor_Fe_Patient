<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/update_profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Toolbar

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imv_carepay_non_inf_back"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_23">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center|left"
                            android:text="Check information"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">



                    </LinearLayout>

                </LinearLayout>




            </Toolbar>
        </LinearLayout>

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F6F5"
            tools:context=".profile_interface.UpdateProfile">

            <LinearLayout
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="10dp"
                        android:textSize="18dp"
                        android:text="Full name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <EditText
                        android:id="@+id/edt_carepay_non_inf_fullName"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#F8F6F5"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="10dp"
                        android:textSize="18dp"
                        android:text="Identity card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <EditText
                        android:id="@+id/edt_carepay_non_inf_card"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#F8F6F5"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="10dp"
                        android:textSize="18dp"
                        android:text="Date of birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <EditText
                        android:id="@+id/edt_carepay_non_inf_dataOfBirth"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#F8F6F5"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="10dp"
                        android:textSize="18dp"
                        android:text="Gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <Spinner
                        android:id="@+id/spl_carepay_non_inf_gender"
                        android:padding="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#F8F6F5"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="10dp"
                        android:textSize="18dp"
                        android:text="Province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <EditText
                        android:id="@+id/edt_carepay_non_inf_province"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="#F8F6F5"
                        android:padding="10dp"
                        android:textColor="#000000">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="10dp"
                        android:textSize="18dp"
                        android:text="District"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <EditText
                        android:id="@+id/edt_carepay_non_inf_district"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#F8F6F5"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="10dp"
                        android:textSize="18dp"
                        android:text="Wards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <EditText
                        android:id="@+id/edt_carepay_non_inf_wards"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#F8F6F5"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="145dp">
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="10dp"
                        android:textSize="18dp"
                        android:text="Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <EditText
                        android:id="@+id/edt_carepay_non_inf_address"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#F8F6F5"
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                    </EditText>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_carepay_non_inf_false"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:text="That not"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/btn_carepay_non_inf_true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#2BC4BF"
                    android:text="That true"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>