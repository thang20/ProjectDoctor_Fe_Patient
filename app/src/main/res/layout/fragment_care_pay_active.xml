<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F8F6F5"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView
        android:background="#F8F6F5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#DBF1F0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:orientation="vertical"
                android:background="#DBF1F0"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <TextView
                    android:gravity="center"
                    android:id="@+id/txt_carepay_non_name"
                    android:textSize="25sp"
                    android:layout_margin="10dp"
                    android:text="Surplus(USD)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/txt_carepay_active_money"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="100.00USD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/hang2"
                        android:layout_width="25dp"
                        android:layout_height="25dp">

                    </ImageView>
                    <TextView
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:text="   Gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>


            </LinearLayout>
            <LinearLayout

                android:weightSum="2"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="@drawable/carepay"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imv_carepay_active_scan"
                            android:src="@drawable/cpat3"
                            android:layout_width="60dp"
                            android:layout_height="60dp">

                        </ImageView>
                        <TextView
                            android:textColor="#000000"
                            android:text="Scan code to pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imv_carepay_active_ct"
                            android:src="@drawable/cpat2"
                            android:layout_width="60dp"
                            android:layout_height="60dp">

                        </ImageView>
                        <TextView
                            android:textColor="#000000"
                            android:text="Transfers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imv_carepay_active_pay"
                            android:src="@drawable/cpat1"
                            android:layout_width="60dp"
                            android:layout_height="60dp">

                        </ImageView>
                        <TextView
                            android:gravity="center"
                            android:textColor="#000000"
                            android:text="Deposit and withdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ln_carepay_active_add_card"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:backgroundTint="#2BC4BF"
                    android:layout_margin="20dp"
                    android:background="@drawable/carepay"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/cpat6"
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="17dp"
                            android:textColor="#FFFFFF"
                            android:text="Add card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:textSize="17dp"
                            android:textColor="#FFFFFF"
                            android:text="Support linking multiple bank cards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout

                android:weightSum="5"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="@drawable/carepay"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2.7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@drawable/carepay3"
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                    </ImageView>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:text="Carepay has been created"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:textSize="20dp"
                        android:layout_marginStart="10dp"
                        android:text="Continue using Carepay to pay without cash and accumulate bonus points."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:background="#E1D6D6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.98"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/txt_carepay_active_carepay"
                        android:text="Your Carepay Information"
                        android:textColor="#2BC4BF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>





            </LinearLayout>

            <LinearLayout

                android:weightSum="5"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="@drawable/carepay"
                android:layout_width="match_parent"
                android:layout_height="290dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2.7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@drawable/cpat5"
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                    </ImageView>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:text="Set screen lock"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:textSize="20dp"
                        android:layout_marginStart="10dp"
                        android:text="You have to log in quickly, securely with facial recognition or fingerprint or password Y.DT application"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:background="#E1D6D6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.78"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/txt_carepay_active_lock"
                        android:text="Install now"
                        android:textColor="#2BC4BF"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>





            </LinearLayout>






            <LinearLayout

                android:weightSum="4"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="#F8F6F5"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>




            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>