<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_interface.ProfileDataScheduleAdd">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Toolbar

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imv_carepay_active_addcard_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_23">

                    </ImageView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:text="Link to card"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">



                </LinearLayout>

            </LinearLayout>




        </Toolbar>
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:text="Card number (From 16 digits)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:inputType="number"
            android:id="@+id/edt_carepay_active_addcard_number"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="#F8F6F5"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:text="Card opening date/Expiry date (ex: 2/2022)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/edt_carepay_active_addcard_date"
            android:inputType="date"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="#F8F6F5"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:text="Cardholder's name and surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/edt_carepay_active_addcard_name"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="#F8F6F5"
            android:layout_width="match_parent"
            android:layout_height="45dp">

        </EditText>


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:textColor="#FFE500"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:text="Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textColor="#FFE500"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:text="* With MB bank, only use the card that you are the cardholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textColor="#FFE500"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:text="* With other banks, you have unlimited links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>



    </LinearLayout>


    <Button
        android:id="@+id/btn_carepay_active_addcard_next"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#2BC4BF"
        android:text="Continue"
        android:textAllCaps="false" />



</LinearLayout>