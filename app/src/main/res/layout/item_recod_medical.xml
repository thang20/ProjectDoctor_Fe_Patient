<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F5"
    tools:context=".profile_interface.ProfileDataScheduleAdd">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/homeonext"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                </ImageView>
                <TextView
                    android:layout_marginStart="15dp"
                    android:text="Doctor Information"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/carepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Name"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_profile_recod_medical_nameDoctor"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="Nguyen Ngoc Thang"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Hospital"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_profile_recod_medical_hospital"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Specialist"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_profile_recod_medical_spec"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Phone"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_profile_recod_medical_phone"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0972809182"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/homeonext2">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Examination schedule"
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/carepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Name"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_profile_recod_medical_name"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Tests"
                            android:textSize="18sp">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_profile_recod_medical_test"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Result"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_profile_recod_medical_result"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="10/10/2000"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left|top"

                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Drugs"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right|top"

                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_profile_recod_medical_drug"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="17:30"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Time"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_profile_recod_medical_time"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:background="#2BC4BF"
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </LinearLayout>



        </LinearLayout>



    </ScrollView>



</LinearLayout>