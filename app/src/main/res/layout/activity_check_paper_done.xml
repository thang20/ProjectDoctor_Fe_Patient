<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_interface.ProfileDataScheduleAdd">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Toolbar

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imv_carepay_non_paper_done_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_23">

                    </ImageView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:text="THeKYC"
                        android:textColor="#2BC4BF"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">



                </LinearLayout>

            </LinearLayout>




        </Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#F8F6F5"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:gravity="center"
                android:text="Identity card/ID card on the front"
                android:textColor="#2BC4BF"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:padding="20dp"
                android:textColor="#000000"
                android:textSize="17dp"
                android:text="* Make sure he doesn't wear glasses, doesn't wear a hat and looks straight at the camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#F8F6F5"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:weightSum="3"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="330dp">
        <ImageView
            android:id="@+id/imv_carepay_non_paper_done_face"
            android:layout_width="match_parent"
            android:layout_height="230dp">

        </ImageView>






    </LinearLayout>

    <Button
        android:id="@+id/btn_carepay_non_paper_done_take_again"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:textColor="#2BC4BF"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Capture"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/btn_carepay_non_paper_done_next"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#2BC4BF"
        android:text="Continue"
        android:textAllCaps="false" />



</LinearLayout>