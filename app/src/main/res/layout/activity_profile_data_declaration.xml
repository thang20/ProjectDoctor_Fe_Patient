                            android:id="@+id/rgr_cou1"
                            android:paddingStart="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/rgr_cou2"
                            android:paddingStart="10dp"
                            android:layout_marginStart="35dp"
