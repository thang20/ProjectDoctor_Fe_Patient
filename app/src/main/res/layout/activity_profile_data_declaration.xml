                        </RadioButton>


                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="5dp"
                    android:background="#F8F6F5"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:paddingStart="5dp"
                        android:background="#FFFFFF"
                        android:layout_margin="1dp"
                        android:gravity="center|left"
                        android:text="Sore throat"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </TextView>
                    <RadioGroup
                        android:id="@+id/rgr_so"
                        android:layout_margin="1dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">



                        <RadioButton
                            android:id="@+id/rgr_so1"
                            android:paddingStart="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/rgr_so2"
                            android:paddingStart="10dp"
                            android:layout_marginStart="35dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content">

                        </RadioButton>


                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="5dp"
                    android:background="#F8F6F5"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:paddingStart="5dp"
                        android:background="#FFFFFF"
                        android:layout_margin="1dp"
                        android:gravity="center|left"
                        android:text="Loss of taste/Loss of smell"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </TextView>
                    <RadioGroup
                        android:id="@+id/rgr_lo"
                        android:layout_margin="1dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">



                        <RadioButton
                            android:id="@+id/rgr_lo1"
                            android:paddingStart="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/rgr_lo2"
                            android:paddingStart="10dp"
                            android:layout_marginStart="35dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content">

                        </RadioButton>


                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="5dp"
                    android:background="#F8F6F5"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:paddingStart="5dp"
                        android:background="#FFFFFF"
                        android:layout_margin="1dp"
                        android:gravity="center|left"
                        android:text="Feeling tired"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </TextView>
                    <RadioGroup
                        android:id="@+id/rgr_fee"
                        android:layout_margin="1dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">



                        <RadioButton
                            android:id="@+id/rgr_fee1"
                            android:paddingStart="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/rgr_fee2"
                            android:paddingStart="10dp"
                            android:layout_marginStart="35dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content">

                        </RadioButton>


                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="5dp"
                    android:background="#F8F6F5"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:paddingStart="5dp"
                        android:background="#FFFFFF"
                        android:layout_margin="1dp"
                        android:gravity="center|left"
                        android:text="Shortness of breath"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </TextView>
                    <RadioGroup
                        android:id="@+id/rgr_sho"
                        android:layout_margin="1dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:background="#FFFFFF"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">



                        <RadioButton
                            android:id="@+id/rgr_sho1"
                            android:paddingStart="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/rgr_sho2"
                            android:paddingStart="10dp"
                            android:layout_marginStart="35dp"
