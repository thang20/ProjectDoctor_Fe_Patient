<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_weight="5"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:background="@drawable/carepay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imv_home_home1_data_allHospital_image"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:id="@+id/txt_home_home1_data_allHospital_name"
            android:paddingHorizontal="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Hong Duc Hospital "
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/txt_home_home1_data_allHospital_address"
            android:paddingHorizontal="15dp"
            android:textSize="18dp"
            android:text="32 Thong nhat, Phuong 10, Quan Go Vap, Ha noi"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <Button
            android:id="@+id/btn_home_home1_data_allHospital_book"
            android:layout_marginHorizontal="15dp"
            android:text="Book an examination"
            android:textAllCaps="false"
            android:backgroundTint="#2BC4BF"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </Button>



    </LinearLayout>





</LinearLayout>